{
    "name": "backend",
    "version": "0.0.0",
    "description": "description of the application",
    "license": "MIT",
    "repository": {},
    "scripts": {
        "build:app": "foal rmdir build/backend/src/app && copy-cli \"src/**/*.html\" build && tsc -p tsconfig.app.json",
        "build:app:w": "tsc -p tsconfig.app.json -w",
        "start": "node ./build/backend/src/index.js",
        "start:w": "supervisor -w ./build --no-restart-on error ./build/backend/src/index.js",
        "develop": "npm run build:app && concurrently \"npm run build:app:w\" \"npm run start:w\"",
        "build:test": "foal rmdir build && copy-cli \"src/**/*.html\" build && tsc -p tsconfig.test.json",
        "build:test:w": "tsc -p tsconfig.test.json -w",
        "start:test": "mocha --file \"./build/backend/src/test.js\" \"./build/**/*.spec.js\"",
        "start:test:w": "mocha --file \"./build/backend/src/test.js\" -w \"./build/**/*.spec.js\"",
        "test": "npm run build:test && concurrently \"npm run build:test:w\" \"npm run start:test:w\"",
        "build:e2e": "foal rmdir build/backend/src/e2e && copy-cli \"src/**/*.html\" build && tsc -p tsconfig.e2e.json",
        "build:e2e:w": "tsc -p tsconfig.e2e.json -w",
        "start:e2e": "mocha --timeout 4000 --file \"./build/backend/src/e2e.js\" \"./build/backend/src/e2e/**/*.js\"",
        "start:e2e:w": "mocha --file \"./build/backend/src/e2e.js\" -w \"./build/backend/src/e2e/**/*.js\"",
        "e2e": "npm run build:e2e && concurrently \"npm run build:e2e:w\" \"npm run start:e2e:w\"",
        "build:scripts": "foal rmdir build/backend/src/scripts && tsc -p tsconfig.scripts.json",
        "build:scripts:w": "tsc -p tsconfig.scripts.json -w",
        "lint": "eslint --ext ts src",
        "lint:fix": "eslint --ext ts --fix src",
        "build:migrations": "foal rmdir build/backend/src/migrations && tsc -p tsconfig.migrations.json",
        "migration:generate": "./node_modules/.bin/typeorm migration:generate",
        "migration:run": "./node_modules/.bin/typeorm migration:run",
        "migration:revert": "./node_modules/.bin/typeorm migration:revert"
    },
    "engines": {
        "node": ">=8"
    },
    "dependencies": {
        "@foal/core": "^1.11.1",
        "@foal/typeorm": "^1.11.1",
        "@types/express": "^4.17.8",
        "@types/supertest": "^2.0.10",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.0",
        "prettier": "^2.1.2",
        "source-map-support": "^0.5.19",
        "sqlite3": "^5.0.0",
        "typeorm": "0.2.28"
    },
    "devDependencies": {
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.11.2",
        "@typescript-eslint/eslint-plugin": "~4.3.0",
        "@typescript-eslint/parser": "~4.3.0",
        "concurrently": "^5.3.0",
        "copy": "^0.3.2",
        "eslint": "^7.10.0",
        "mocha": "^8.1.3",
        "supertest": "^5.0.0",
        "supervisor": "^0.12.0",
        "typescript": "~4.0.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix"
        ]
    }
}
